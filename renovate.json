{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": ["^ARG .*_IMAGE=(?<depName>.*?):(?<currentValue>[^:]*?)$"],
      "datasourceTemplate": "docker"
    }
  ]
}
